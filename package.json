{
  "name": "xemphim-enterprise",
  "version": "1.0.0",
  "description": "Enterprise-grade movie streaming application with advanced features",
  "main": "app-modular.js",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "npm run build && npm run analyze",
    "serve": "serve -s dist -l 3000",
    "preview": "npm run build && npm run serve",
    
    "type-check": "tsc --noEmit",
    "type-coverage": "typescript-coverage-report",
    
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:check": "eslint . --ext .js,.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "playwright test --grep smoke",
    
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "analyze:bundle": "npm run build -- --analyze",
    "size-limit": "size-limit",
    
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "audit": "npm audit --audit-level=moderate",
    "security": "npm audit && snyk test",
    
    "monitor:production": "node scripts/monitor-production.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    
    "clean": "rimraf dist coverage reports",
    "reset": "npm run clean && rm -rf node_modules package-lock.json && npm install",
    
    "docker:build": "docker build -t xemphim-enterprise .",
    "docker:run": "docker run -p 3000:3000 xemphim-enterprise",
    
    "deploy:staging": "vercel --target staging",
    "deploy:production": "vercel --prod",
    
    "postinstall": "husky install",
    "prepare": "husky install"
  },
  "keywords": [
    "movie",
    "streaming",
    "spa",
    "typescript",
    "webpack",
    "pwa",
    "enterprise"
  ],
  "author": "XemPhim Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xemphim/xemphim-enterprise.git"
  },
  "bugs": {
    "url": "https://github.com/xemphim/xemphim-enterprise/issues"
  },
  "homepage": "https://xemphim.com",
  "dependencies": {
    "@babel/runtime": "^7.23.0",
    "core-js": "^3.33.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^10.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.0.1",
    
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.1.0",
    
    "mini-css-extract-plugin": "^2.7.6",
    
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.0",
    
    "rimraf": "^5.0.5",
    
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "serve": "^14.2.1",
    "size-limit": "^10.0.0",
    "snyk": "^1.1248.0",
    "style-loader": "^3.3.3",
    
    "terser-webpack-plugin": "^5.3.9",
    "typescript": "^5.2.2",
    "typescript-coverage-report": "^0.8.0",
    
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0",
    "worker-loader": "^3.0.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/modules/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "modules/**/*.js",
      "!modules/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "size-limit": [
    {
      "name": "Main bundle",
      "path": "dist/main.*.js",
      "limit": "300 KB"
    },
    {
      "name": "Core chunk",
      "path": "dist/core.*.js",
      "limit": "100 KB"
    },
    {
      "name": "UI chunk",
      "path": "dist/ui.*.js",
      "limit": "150 KB"
    }
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:unit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
