# üîê Environment Variables Template
# Copy this file to .env and fill in your actual values

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# API Configuration
API_BASE_URL=https://phimapi.com
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Security Settings
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Cache Settings
CACHE_MAX_SIZE=100
CACHE_TTL=300000

# Comment Moderation
AUTO_APPROVE_COMMENTS=false
REQUIRE_MODERATION=true

# Git Auto-push Settings (for auto-updater)
GIT_AUTO_PUSH=true
GIT_COMMIT_MESSAGE_TEMPLATE="Auto-update: {updateSummary}"

# Performance Settings
BATCH_SIZE=24
UPDATE_INTERVAL=300000

# üìù Setup Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your Firebase credentials from Firebase Console
# 3. Adjust other settings as needed
# 4. Never commit .env file to version control
